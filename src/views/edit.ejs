<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Update User</title>
</head>
<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create" >Create User</a>
      </div>

    <div class="form-add-new">
        <form action="/update-user"  method="POST">
            <fieldset>
            <legend>Update a user</legend>
            <div class="input-group  d-none">
                <label>Id: </label>
                <input type="text" class="type" name="userId"  value= "<%= userEdit.id %>" >
            </div>
            <div class="input-group" >
                <label>Email: </label>
                <input type="text" class="type" name="email"  value= "<%= userEdit.email %>" >
            </div>

            <div class="input-group">
                <label>My Name: </label>
                <input type="text" class="type" name = "name"  value= "<%= userEdit.name %>">
            </div>

            <div class="input-group">
                <label>City: </label>
                <input type="text" class="type" name = "city"  value= "<%= userEdit.city %>">
            </div>
        

        
            <div>
                <button> Save </button>
            </div>
            </fieldset>
        </form>
    </div>
</body>
</html>